<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTrendingMoviesTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Trending"
        android:textSize="24sp"
        android:textColor="@color/color_black"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@id/rvTrendingMovies"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTrendingMovies"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/tvNowPlayingMoviesTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvTrendingMoviesTitle"
        app:layout_constraintTop_toBottomOf="@id/tvTrendingMoviesTitle" />

    <TextView
        android:id="@+id/tvNowPlayingMoviesTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Now Playing"
        android:textSize="24sp"
        android:textColor="@color/color_black"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="@id/rvNowPlayingMovies"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvTrendingMovies" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNowPlayingMovies"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvNowPlayingMoviesTitle"
        app:layout_constraintTop_toBottomOf="@id/tvNowPlayingMoviesTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>